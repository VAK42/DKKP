<?xml version="1.0" encoding="UTF-8"?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import io.github.palexdev.materialfx.controls.MFXTableColumn?>
<?import javafx.scene.control.ScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<ScrollPane xmlns:fx="http://javafx.com/fxml" stylesheets="@../DKKP.css" fitToWidth="true" fitToHeight="true">
<VBox spacing="20" prefWidth="800">
<MFXButton fx:id="backBtn" buttonType="RAISED" mnemonicParsing="false" text="Back" prefWidth="50" prefHeight="25" styleClass="Btn"/>
<HBox alignment="TOP_CENTER">
<VBox spacing="10" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
<HBox>
<Label alignment="CENTER" text="BILL DETAIL TABLE" styleClass="pdLabel"/>
</HBox>
<MFXTableView fx:id="billDetailTable" footerVisible="false" prefWidth="700" minHeight="380">
<tableColumns>
<MFXTableColumn fx:id="ID_BILL_DETAIL" text="ID" styleClass="productBF" style="-fx-font-size: 10px;"/>
<MFXTableColumn fx:id="ID_BILLD" text="ID BILL" styleClass="productBF" style="-fx-font-size: 10px;"/>
<MFXTableColumn fx:id="AVAILABLE" text="AVAILABLE" styleClass="productBF" style="-fx-font-size: 10px;"/>
<MFXTableColumn fx:id="ID_FINAL_PRODUCT" text="FINAL PRODUCT" styleClass="productBF" style="-fx-font-size: 10px;"/>
<MFXTableColumn fx:id="QUANTITY_SP" text="QUANTITY" styleClass="productBF" style="-fx-font-size: 10px;"/>
<MFXTableColumn fx:id="UNIT_PRICE" text="UNIT PRICE" styleClass="productBF" style="-fx-font-size: 10px;"/>
<MFXTableColumn fx:id="TOTAL_DETAIL_PRICE" text="TOTAL PRICE" styleClass="productBF" style="-fx-font-size: 10px;"/>
</tableColumns>
</MFXTableView>
</VBox>
<VBox spacing="10" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
<Label styleClass="pdLabel">BILL GENERAL</Label>
<MFXTextField editable="false" fx:id="ID_BILL" floatingText="ID" floatMode="BORDER" prefWidth="200" prefHeight="40"/>
<MFXTextField editable="false" fx:id="ID_USER" floatingText="EMAIL ACC" floatMode="BORDER" prefWidth="200" prefHeight="40"/>
<MFXComboBox fx:id="BILL_STATUS" floatingText="BILL STATUS" floatMode="BORDER" prefWidth="200" prefHeight="40">
<items>
<FXCollections fx:factory="observableArrayList">
<String fx:value="Pending"/>
<String fx:value="Payed"/>
<String fx:value="Shipped"/>
<String fx:value="Delivered"/>
<String fx:value="Cancel"/>
<String fx:value="None"/>
</FXCollections>
</items>
</MFXComboBox>
<MFXTextField editable="false" fx:id="DATE_EXP" floatingText="DATE EXPORT" floatMode="BORDER" prefWidth="200" prefHeight="40"/>
<MFXTextField editable="false" fx:id="PHONE_BILL" floatingText="PHONE BILL" floatMode="BORDER" prefWidth="200" prefHeight="40"/>
<MFXTextField editable="false" fx:id="ADD_BILL" floatingText="ADDRESS" floatMode="BORDER" prefWidth="200" prefHeight="40"/>
<MFXTextField editable="false" fx:id="DESCRIPTION" floatingText="DESCRIPTION" floatMode="BORDER" prefWidth="200" prefHeight="40"/>
</VBox>
</HBox>
<HBox alignment="CENTER">
<MFXButton fx:id="updateBtn" buttonType="RAISED" mnemonicParsing="false" text="Update" styleClass="Btn"/>
</HBox>
</VBox>
</ScrollPane>